{
  "name": "screenshotr",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@rehooks/component-size": "^1.0.3",
    "dom-to-image": "^2.6.0",
    "file-saver": "^2.0.2",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-color": "^2.18.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "react-select": "^3.1.0",
    "typeface-montserrat": "0.0.75"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:functions": "firebase emulators:start --only functions",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write \"src/**/*.{js,ts,css,less,scss,vue,json,gql,md}\"",
    "predeploy": "npm install && npm run format && npm run build",
    "deploy": "npm run predeploy && firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "clean-install": "rm -rf node_modules && rm -f package-lock.json && npm i",
    "lint": "eslint src/**/*.{js,jsx}",
    "update-packages": "ncu -u && npm i && npm audit fix"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "prettier": "^2.0.5"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true
  }
}
