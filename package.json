{
  "name": "screenshotr",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@rehooks/component-size": "^1.0.3",
    "dom-to-image": "^2.6.0",
    "file-saver": "^2.0.2",
    "node-sass": "^4.13.0",
    "react": "^16.12.0",
    "react-color": "^2.17.3",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.0",
    "react-select": "^3.0.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:functions": "firebase emulators:start --only functions",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prettify": "prettier --write \"src/**/*.{js,ts,css,less,scss,vue,json,gql,md}\"",
    "predeploy": "npm install && npm run prettify && npm run build",
    "deploy": "npm run predeploy && firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "firebase deploy --only hosting"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^6.7.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "prettier": "^1.19.1"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true
  }
}
